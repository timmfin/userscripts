{
  "name": "GitHub-Diff-Whitespace",
  "version": "1.3.0",
  "manifest_version": 2,

  "description": "Adds a button to GitHub diff views which toggles whitespace (a la `git diff --ignore-all-space`)",
  "icons": { "128" : "icon.png" },

  "content_scripts": [ {
    "js": [ "github-diff-whitespace.js" ],
    "matches": [ "https://github.com/*/commit/*",
                 "https://github.com/*/compare/*",
                 "https://github.com/*/pull/*",
                 "https://git.hubteam.com/*/commit/*",
                 "https://git.hubteam.com/*/compare/*",
                 "https://git.hubteam.com/*/pull/*" ]
  } ]
}
